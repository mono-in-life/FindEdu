doctype html

include ../components

block variables

html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="ProjectName — описание")
    link(rel="icon", type="image/png", href="img/favicon-32x32.png")
    link(rel="preload", href="fonts/inter-v11-latin_cyrillic-400.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/inter-v11-latin_cyrillic-500.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/inter-v11-latin_cyrillic-600.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/inter-v11-latin_cyrillic-800.woff2", as="font", crossorigin="anonymous")
    link(rel="stylesheet", href="css/style.min.css")

  body
    .wrapper(class=wrapperMods)
      if (hasHeader)
        +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        +footer(footerMods)

    block modals

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
